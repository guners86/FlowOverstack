<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="questions">
      	
        <% @questions.each do |question| %>
        
          <div class="question-summary">
            
            <div class="cp">
              <span class="votes-count"><%= question.votes.count %></span>
              <span class="votes-description">Votos</span>
            </div>
            
            <div class="answer">
              <span class="answer-count"><%= question.answers.count %></span>
              <span class="answer-description">Respuestas</span>
            </div>
            
            <div class="summary">
              <span class="question-title"><%= link_to question.title, question %></span>
              <span class="question-description">Realizada por <%= question.user.email %> el <%= question.created_at %></span>
            </div>
          </div>

        <% end %>
        
        
      </div>
    </div>
  </div>
</div>
